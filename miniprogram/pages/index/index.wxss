}

.list_price {
      font-size: 33rpx;
      color: rgb(0, 0, 0);
}

.list_time {
      font-size: 28rpx;
      letter-spacing: 2rpx;
      color: rgb(129, 129, 129);
}

.nocontent {
      width: 100%;
      /* height: calc(100% - 800rpx); */
      /* height:1000rpx; */
      height:100%;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      box-sizing: border-box;
      /* background-color: #f6f6f8; */
}

.noimage {    
      flex:2;
      width: 100%;
      height: 800rpx;
      margin:0rpx;
      top:0
}

.blank_text {
      flex:1;
      margin:0rpx;
      height:80rpx;
      text-align: center;
      line-height: 70rpx;
      font-size: 32rpx;
      align-items: center;
      letter-spacing: 2rpx;
      /* color: #c6c6c8; */
     
}

.fixed {
      position: fixed;
      left: 0rpx;
      top: 0rpx;
}

.nofixed {
      height: 91rpx;
      width: 100%;
      background: #fff;
}
