      flex-direction: column;
      justify-content: space-between;
      padding: 0 10rpx;
      box-sizing: border-box;
}

.list_word {
      display: flex;
      flex-direction: column;
      width: 100%;
      box-sizing: border-box;
}

.list_title {
      width: 100%;
      font-size: 32rpx;
      letter-spacing: 3rpx;
      line-height: 45rpx;
}

.list_author {
      padding-top: 10rpx;
      width: 100%;
      font-size: 27rpx;
      letter-spacing: 3rpx;
      line-height: 40rpx;
      color: rgb(129, 129, 129);
}

.list_between {
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: flex-end;
